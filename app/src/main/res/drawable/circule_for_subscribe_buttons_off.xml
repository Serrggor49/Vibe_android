    <item>
        <shape android:shape="oval">
            <solid android:color="#00808080" />
            <size android:width="100dp" android:height="100dp" />
        </shape>
    </item>
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
